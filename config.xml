<?xml version='1.0' encoding='utf-8'?>
<widget id="myapp.crowdcounter" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Crowd Counter</name>
    <description>Crowd Counter Tool</description>
    <author email="dev@cordova.apache.org" href="https://cordova.apache.org">
        Jomar Lavador
    </author>
    <content src="index.html" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />

    <platform name="android">
        <icon background="res/icon/android/ldpi.png" density="ldpi" foreground="res/icon/android/ldpi.png" />
        <icon background="res/icon/android/mdpi.png" density="mdpi" foreground="res/icon/android/mdpi.png" />
        <icon background="res/icon/android/hdpi.png" density="hdpi" foreground="res/icon/android/hdpi.png" />
        <icon background="res/icon/android/xhdpi.png" density="xhdpi" foreground="res/icon/android/xhdpi.png" />
        <icon background="res/icon/android/xxhdpi.png" density="xxhdpi" foreground="res/icon/android/xxhdpi.png" />
        <icon background="res/icon/android/xxxhdpi.png" density="xxxhdpi" foreground="res/icon/android/xxxhdpi.png" />

        <splash src="res/screen/android/splash-port-hdpi.png" density="land-hdpi" />
        <splash src="res/screen/android/splash-port-ldpi.png" density="land-ldpi" />
        <splash src="res/screen/android/splash-port-mdpi.png" density="land-mdpi" />
        <splash src="res/screen/android/splash-port-xhdpi.png" density="land-xhdpi" />
        <splash src="res/screen/android/splash-port-xxhdpi.png" density="land-xxhdpi" />
        <splash src="res/screen/android/splash-port-xxxhdpi.png" density="land-xxxhdpi" />

        <splash src="res/screen/android/splash-port-hdpi.png" density="port-hdpi" />
        <splash src="res/screen/android/splash-port-ldpi.png" density="port-ldpi" />
        <splash src="res/screen/android/splash-port-mdpi.png" density="port-mdpi" />
        <splash src="res/screen/android/splash-port-xhdpi.png" density="port-xhdpi" />
        <splash src="res/screen/android/splash-port-xxhdpi.png" density="port-xxhdpi" />
        <splash src="res/screen/android/splash-port-xxxhdpi.png" density="port-xxxhdpi" /> 

    </platform>
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashScreenDelay" value="8000" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <preference name="FadeSplashScreenDuration" value="750"/>
    <preference name="ShowSplashScreenSpinner" value="false"/>
    <preference name="FadeSplashScreen" value="true"/>
	<preference name="android-targetSdkVersion" value="32" />
	 
	<preference name="AndroidWindowSplashScreenAnimatedIcon" value="res/icon/android/ldpi.png" />
</widget>
